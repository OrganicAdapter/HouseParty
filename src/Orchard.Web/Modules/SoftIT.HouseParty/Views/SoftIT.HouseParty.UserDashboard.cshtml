@{
    var id = int.Parse(Model.Id);
}

@if (!id.Equals(0))
{ 
    @Html.ActionLink("View user", "UserSummary", new { id = id })
}

@Html.ValidationSummary(T("Some values are not correct. Please fill the fields the right way and fill the required forms.").ToString())

@using (Html.BeginFormAntiForgeryPost())
{ 
    @Display(Model.EditorShape())
}