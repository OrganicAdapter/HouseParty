@using Orchard.ContentManagement

@{
    var id = int.Parse(Model.Id);
    var contentManager = WorkContext.Resolve<IContentManager>();
    var usersQuery = contentManager.Query("User").ForPart<Orchard.Security.IUser>();
    var users = usersQuery.List<Orchard.Security.IUser>();
}

@Display(Model.DisplayShape())
@Html.ActionLink("Invite a friend", "InviteUser", new { partyId = id })
